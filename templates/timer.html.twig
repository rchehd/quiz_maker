<div class="quiz-timer">
  <div class="timer-label">
    <span id="timer-label">{{ 'Time left'|t }}</span>
  </div>
  <div class="countdown">
    <div class="bloc-time hours" data-init-value="24">
      <span class="count-title">{{ 'Hours'|t }}</span>
      <div class="figure hours">
        <span id="timer-hours" class="top">{{ hours }}</span>
      </div>
    </div>

    <div class="bloc-time min" data-init-value="0">
      <span class="count-title">Minutes</span>
      <div class="figure min">
        <span id="timer-minutes" class="top">{{ minutes }}</span>
      </div>
    </div>

    <div class="bloc-time sec" data-init-value="0">
      <span class="count-title">Seconds</span>
      <div class="figure sec">
        <span id="timer-seconds" class="top">{{ seconds }}</span>
      </div>
    </div>
  </div>
</div>

