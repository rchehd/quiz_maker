/**
 * Implements hook_entity_bundle_info_alter().
 *
 * Map question and answers classes to bundles.
 */
function quiz_maker_entity_bundle_info_alter(array &$bundles): void {
  /* @var $pluginManager \Drupal\quiz\Plugin\QuizQuestionPluginManager */
  $pluginManager = Drupal::service('plugin.manager.quiz_maker.question');
  $plugins = $pluginManager->getDefinitions();
  foreach ($plugins as $key => $plugin) {
    if (isset($bundles['quiz_maker_question'][$key])) {
      $bundles['quiz_maker_question'][$key]['class'] = $plugin['class'];
      $bundles['quiz_maker_question_answer'][$plugin['answer_plugin_id']]['class'] = $plugin['answer_class'];
    }
  }
}
